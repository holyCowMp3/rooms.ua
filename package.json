{
  "name": "venus",
  "version": "1.0.0",
  "description": "Venus Template",
  "license": "GPLv3",
  "scripts": {
    "clean": "rimraf assets/{css/*,js/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r assets/css/*",
    "scss": "node-sass --output-style compressed -o assets/css assets/scss",
    "lint": "eslint assets/js || true",
    "lint-scss": "stylelint assets/scss/*.scss --syntax scss || true",
    "uglify": "mkdirp assets/js -p && uglifyjs assets/js/*.js -m -c -o assets/js/main.min.js",
    "imagemin": "imagemin assets/images/* -o assets/images",
    "serve": "browser-sync start --server --files \"assets/css/*.css, assets/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin",
    "build": "run-s build:*",
    "watch:css": "onchange \"assets/scss\" -- run-s build:css",
    "watch:js": "onchange \"assets/js\" -- run-s build:js",
    "watch:images": "onchange \"assets/images\" -- run-s build:images",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "browser-sync": "^2.12.8",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.5.4",
    "stylelint": "^9.4.0",
    "uglify-es": "^3.3.10"
  },
  "main": ".eslintrc.js"
}
